<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data noupdate="1">
   
        <record id="email_template_construction_ticket" model="mail.template">
           <field name="name">Project Issues - Send by Email</field>
           <field name="email_from">{{object.company_id.email}}</field>
           <field name="subject">{{object.name}} - {{object.subject}} (Closed)</field>
           <field name="email_to">{{object.partner_id.email}}</field>
           <field name="model_id" ref="construction_contracting_issue_tracking.model_construction_ticket"/>
           <field name="auto_delete" eval="True"/>
           <field name="report_template" ref="construction_contracting_issue_tracking.print_construction_request"/>
           <field name="report_name">Construction Report</field>
            <!-- <field name="body_html"><![CDATA[ -->
            <field name="body_html" type="html">
            
<p>Dear <t t-out="object.partner_id.name"/>, </p><br/>

<t t-set="is_online" t-value="access_action and access_action['type'] == 'ir.actions.act_url'"/>
<!-- <t t-set="access_action" t-value="object.get_access_action()"/> -->
<t t-set="access_action" t-value="object._get_access_action()"/>
<t t-set="custom_access_url" t-value="access_action['type'] == 'ir.actions.act_url' and access_action['url'] or '/construction_email/feedback/'+str(object.id) "/>

<p>We have closed your ticket for now, if you want to reopen please do not hesitate contact us. </p><br/>

<p><a style="padding: 8px 30px 8px 30px;border-radius: 6px;border: 1px solid #CCCCCC;background-color:#008080;margin-left: 2px;text-decoration: none;color:#FFFFFF;"  t-attf-href="{{custom_access_url}}">Please give your feedback</a></p> <br/>
<p>Thanks for your participation!     </p>
        <p>Thank you for choosing <!-- {{object.company_id.name or 'us'}} -->
            <t t-out="object.company_id.name"/>!</p>
        <p></p>
           <br/>
<!-- FOOTER -->
    <tr>
        <td align="center" style="min-width: 590px; padding: 0 8px 0 8px; font-size:11px;">
            <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 4px 0px;"/>
            <b t-out="object.company_id.name or ''">My Company (San Francisco)</b><br/>
            <div style="color: #999999;">
                <t t-out="object.company_id.phone or ''">+1 650-123-4567</t>
                <t t-if="object.company_id.email">
                    | <a t-attf-href="'mailto:%s' % {{ object.company_id.email }}" style="text-decoration:none; color: #999999;" t-out="object.company_id.email or ''">info@yourcompany.com</a>
                </t>
                <t t-if="object.company_id.website">
                    | <a t-attf-href="'%s' % {{ object.company_id.website }}" style="text-decoration:none; color: #999999;" t-out="object.company_id.website or ''">http://www.example.com</a>
                </t>
            </div>
        </td>
    </tr>
<!-- </tbody> -->
<!-- </table> -->
<!-- </td></tr> -->
<!-- POWERED BY -->
<tr><td align="center" style="min-width: 590px;">
    Powered by <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" style="color: #875A7B;">Odoo</a>
</td></tr>
<!-- </table> -->
        </field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
            <!-- </field> -->
        </record>
        
    </data>
</odoo>